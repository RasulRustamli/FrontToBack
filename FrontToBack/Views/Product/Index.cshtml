@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<!-- PRODUCTS START -->

<input id="count" type="hidden" value="@ViewBag.ProductCount"/>
<section id="products">
    <div class="container">
        
        <div class="row" id="productrow">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                        <div class="img">
                            <a href="">
                                <img src="~/img/@item.ImageUrl" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@item.Name</h6>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$@item.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row justify-content-center mt-3">
            <button id="loadMore" class="btn btn-success">Load more..</button>
        </div>
    </div>
</section>

<!-- PRODUCTS END -->
